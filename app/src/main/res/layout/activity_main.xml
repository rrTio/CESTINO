<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#808080"
        tools:context=".MainActivity">

    <TextView
            android:id="@+id/lblScore"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:text="SCORE: "
            android:gravity="center_vertical"
            android:textSize="50dp"
            android:textColor="#000000"
            android:fontFamily="@font/heyfun"
    />

    <ImageView
            android:id="@+id/lives"
            android:layout_width="150dp"
            android:layout_height="60dp"
            android:layout_below="@id/lblScore"
            android:layout_marginLeft="15dp"
            android:src="@drawable/life_three"
    />

    <Button
            android:id="@+id/StartGame"
            android:layout_width="250dp"
            android:layout_height="80dp"
            android:layout_centerInParent="true"
            android:background="@drawable/btn_play"
            android:text="PLAY!"
            android:textSize="55dp"
            android:fontFamily="@font/heyfun"
            android:textStyle="bold"
    />

    <ImageButton
            android:id="@+id/ibtn_battery"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:padding="10dp"
            android:layout_alignParentRight="true"
            android:scaleType="fitCenter"
            android:background="@drawable/custom_image_button_background"
            android:layout_marginTop="270dp"
            android:src="@drawable/battery"
            android:visibility="invisible"

    />
    <ImageButton
            android:id="@+id/ibtn_bulbs"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:padding="10dp"
            android:layout_alignParentRight="true"
            android:scaleType="fitCenter"
            android:background="@drawable/custom_image_button_background"
            android:layout_marginTop="365dp"
            android:src="@drawable/bulbs"
            android:visibility="invisible"

    />
    <ImageButton
            android:id="@+id/ibtn_ewaste"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:padding="10dp"
            android:layout_alignParentRight="true"
            android:scaleType="fitCenter"
            android:background="@drawable/custom_image_button_background"
            android:layout_marginTop="460dp"
            android:src="@drawable/ewaste"
            android:visibility="invisible"

    />
    <ImageButton
            android:id="@+id/ibtn_glass"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:padding="10dp"
            android:layout_alignParentRight="true"
            android:scaleType="fitCenter"
            android:background="@drawable/custom_image_button_background"
            android:layout_marginTop="555dp"
            android:src="@drawable/glass"
            android:visibility="invisible"

    />
    <ImageButton
            android:id="@+id/ibtn_metal"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:padding="10dp"
            android:layout_alignParentLeft="true"
            android:scaleType="fitCenter"
            android:background="@drawable/custom_image_button_background"
            android:layout_marginTop="270dp"
            android:src="@drawable/metal"
            android:visibility="invisible"

    />
    <ImageButton
            android:id="@+id/ibtn_organic"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:padding="10dp"
            android:layout_alignParentLeft="true"
            android:scaleType="fitCenter"
            android:background="@drawable/custom_image_button_background"
            android:layout_marginTop="365dp"
            android:src="@drawable/organic"
            android:visibility="invisible"

    />
    <ImageButton
            android:id="@+id/ibtn_paper"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:padding="10dp"
            android:layout_alignParentLeft="true"
            android:scaleType="fitCenter"
            android:background="@drawable/custom_image_button_background"
            android:layout_marginTop="460dp"
            android:src="@drawable/paper"
            android:visibility="invisible"

    />
    <ImageButton
            android:id="@+id/ibtn_plastic"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:padding="10dp"
            android:layout_alignParentLeft="true"
            android:scaleType="fitCenter"
            android:background="@drawable/custom_image_button_background"
            android:layout_marginTop="555dp"
            android:src="@drawable/plastic"
            android:visibility="invisible"

    />

    <TextView
            android:id="@+id/trashName"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="10dp"
            android:text="PICK THE RIGHT TRASH."
            android:textColor="#000000"
            android:textSize="30dp"
            android:gravity="center"
            android:fontFamily="@font/heyfun"
            android:visibility="invisible"

    />

    <ImageView
            android:id="@+id/trash"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_centerInParent="true"
            android:src="@drawable/trash_organic1"
            android:visibility="invisible"
    />

    <ImageView
            android:id="@+id/player"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="60dp"
            android:src="@drawable/defaultbin"
            android:visibility="invisible"

    />

</RelativeLayout>